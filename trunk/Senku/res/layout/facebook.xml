<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"  
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#A0ffffff"
	android:gravity="center_horizontal">

    <com.omilen.social.LoginButton
        android:id="@+id/login"
        android:src="@drawable/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_margin="30dp"
        android:visibility="invisible"/>

	<TextView android:id="@+id/txt" 
        android:text="@string/login"
        android:textColor="#ff000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		/>
		
<ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/ProgressBarFacebookPost" android:indeterminate="true" android:indeterminateBehavior="cycle"></ProgressBar>
</LinearLayout>
